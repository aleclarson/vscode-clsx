{
  "name": "clsx",
  "displayName": "clsx",
  "publisher": "ElegantStack",
  "repository": "https://github.com/ElegantStack/clsx",
  "description": "Convert ClassName prop from string to clsx. Also adds the import if needed",
  "version": "0.1.1",
  "icon": "clsx.png",
  "galleryBanner": {
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Formatters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.clsx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.clsx",
        "title": "Convert to clsx"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .tsx || resourceExtname == .jsx",
          "command": "extension.clsx",
          "group": "7_modification"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "clsx",
      "properties": {
        "clsx.importAlias": {
          "type": "string",
          "default": "classNames",
          "description": "Set the local alias of the clsx import"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "prettier": "2.0.5",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  }
}
